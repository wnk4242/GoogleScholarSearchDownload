{
  "manifest_version": 3,
  "name": "Google Scholar Batch Search & PDF Downloader",
  "version": "2.3",
  "description": "Batch search papers and bulk download PDFs from Google Scholar Library",
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "https://scholar.google.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://scholar.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

